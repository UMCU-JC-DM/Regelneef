@model ClientSystem.Models.DatasetRequest

@{
    ViewData["Title"] = "Create Dataset Request";
}

<h1>Create a Dataset Request</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="DatasetType" class="form-label">Dataset Type</label>
        <input type="text" class="form-control" id="DatasetType" name="DatasetType" value="@Model.DatasetType" required />
    </div>

    <div class="mb-3">
        <label for="RequestedBy" class="form-label">Requested By</label>
        <select asp-for="RequestedBy" class="form-select" asp-items="ViewBag.Users">
            <option value="">Select a User</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit Request</button>
</form>

<a class="btn btn-secondary" asp-controller="DatasetRequest" asp-action="Index">Back to List</a>