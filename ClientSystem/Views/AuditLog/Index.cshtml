@model IEnumerable<ClientSystem.Models.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<h1>Audit Logs</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Log ID</th>
            <th>Action</th>
            <th>Timestamp</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.AuditLogId</td>
                <td>@log.Action</td>
                <td>@log.Timestamp.ToString("g")</td>
                <td>@log.Details</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to Home</a>